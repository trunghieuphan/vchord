<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="menu_item">
        <item name="android:background">@drawable/selector_light</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="widget_AutoCompleteTextView">
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:hint">@string/txt_song_name_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
    </style>

    <style name="text_song_detail">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
    </style>

    <style name="text_tab_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_tab_dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_song_item_name_dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_song_item_artist_name_dark">
        <item name="android:textColor">@color/LightGray</item>
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>

    <style name="text_song_item_name_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_song_item_artist_name_light">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>
</resources>