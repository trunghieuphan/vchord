<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_song_item"
    android:layout_marginLeft="@dimen/margin_default"
    android:layout_marginRight="@dimen/margin_default"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" 
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txtSongTitle"
            style="?attr/text_song_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:text="Song Title" />

        <TextView
            android:id="@+id/txtUpdateDate"
            style="?attr/text_song_item_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_weight="1"
            android:text="aaa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
         >

        <TextView
            android:id="@+id/txtSongPrice"
            style="?attr/text_song_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        
        <TextView
            style="?attr/text_song_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ä‘" />

        <CheckBox
            android:id="@+id/chkItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtSongId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>